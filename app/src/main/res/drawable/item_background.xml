<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="#BDBDBD"/> <!-- Shadow color -->
        </shape>
    </item>
    <item android:bottom="2dp" android:left="2dp">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <corners android:radius="10dp"/>
            <stroke android:color="#000000" android:width="2dp"/> <!-- Border color and width -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/> <!-- Padding -->
        </shape>
    </item>
</layer-list>
